10 bob = new sprite
20 bob.size = 20
100 if bob.x + bob.size > screen.width then dx = -0.5
110 if bob.x <= 0 then dx = 0.5
120 if bob.y + bob.size > screen.height then dy = -2
130 bob.x = bob.x + dx
140 bob.y = bob.y + dy
150 bob.angle = bob.angle + 2 * dx
160 dy = dy + 0.04
170 pause 15
180 goto 100
