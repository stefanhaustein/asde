def main():
  let bob = screen.newSprite()
  bob.size = 50
  mut dx = 0.5
  mut dy = 0
  bob.yAlign = YAlign.BOTTOM
  bob.xAlign = XAlign.LEFT
  while true:
    if bob.x < 0:
      dx = 1
    end
    if bob.x > screen.width - bob.size:
      dx = -1
    end
    if bob.y < 0:
      dy = 5
    end
    bob.x = bob.x + dx
    bob.y = bob.y + dy
    bob.angle = bob.angle + 2 * dx
    dy = dy - 0.1
    sleep 15
  end
end